<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="account_move_view_tree" model="ir.ui.view">
    <field name="name">account.move.view.tree.inherit.admin_fee</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_invoice_tree"/>
    <field name="arch" type="xml">
      <field name="amount_total_signed" position="after">
        <field name="admin_fee" string="Relationship Benefit" sum="Total Relationship Benefit"/>
      </field>
    </field>
  </record>

  <record id="account_move_view_form" model="ir.ui.view">
    <field name="name">account.move.view.form.inherit.admin_fee</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <field name="team_id" position="after">
        <field name="admin_fee_percentage"/>
      </field>

      <field name="amount_residual" position="before">
        <field name="amount_with_admin_fee" attrs="{'invisible': [('admin_fee', '=', 0)]}"/>
        <field name="admin_fee" string="Relationship Benefit"
          attrs="{'invisible': [('admin_fee', '=', 0)]}"/>
      </field>
    </field>
  </record>
</odoo>
